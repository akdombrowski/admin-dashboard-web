    "downlevelIteration": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/ui/components/*"],
      "@/features/*": ["./src/ui/features/*"],
      "@/auth-pages/*": ["./src/ui/auth-pages/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/actions/*": ["./src/actions/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "types.d.ts",
    "next-auth.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.js",
    "postcss.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
